<odoo>
  <record id="view_payroll_input_sheet_form" model="ir.ui.view">
    <field name="name">hr.payroll.input.sheet.form</field>
    <field name="model">hr.payroll.input.sheet</field>
    <field name="arch" type="xml">
      <form string="Payroll Input Sheet">

        <!-- HEADER BUTTONS -->
        <header>
          <button name="action_import_excel"
                  type="object"
                  string="Import Excel"
                  class="btn-primary"
                  states="draft"/>

          <button name="action_apply_to_payslips"
                  type="object"
                  string="Apply to Payslips"
                  class="btn-secondary"
                  states="draft"/>

          <field name="state"
                 widget="statusbar"
                 statusbar_visible="draft,done"/>
        </header>

        <sheet>
          <group>
            <field name="name"/>
            <field name="month"/>
            <field name="year"/>
          </group>

          <notebook>

            <!-- LINES TAB -->
            <page string="Lines">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="employee_id"/>
                  <field name="input_name"/>
                  <field name="amount"/>
                  <field name="applied"/>
                </tree>
              </field>
            </page>

            <!-- IMPORT TAB -->
            <page string="Import">
              <group>
                <field name="import_file" filename="import_filename"/>
                <field name="import_filename" invisible="1"/>
              </group>
            </page>

          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_hr_payroll_input_sheet" model="ir.actions.act_window">
    <field name="name">Payroll Input Sheets</field>
    <field name="res_model">hr.payroll.input.sheet</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_hr_payroll_input_root"
            name="Payroll Inputs"
            parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"/>

  <menuitem id="menu_hr_payroll_input_sheet"
            name="Sheets"
            parent="menu_hr_payroll_input_root"
            action="action_hr_payroll_input_sheet"/>
</odoo>
