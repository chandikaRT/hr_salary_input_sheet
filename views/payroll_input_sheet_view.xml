<odoo>
  <record id="view_payroll_input_sheet_form" model="ir.ui.view">
    <field name="name">hr.payroll.input.sheet.form</field>
    <field name="model">hr.payroll.input.sheet</field>
    <field name="arch" type="xml">
      <form string="Payroll Input Sheet">
        <sheet>
          <group>
            <field name="name"/>
            <field name="date"/>
            <field name="state"/>
            <field name="file" filename="filename"/>
            <field name="filename"/>
          </group>
          <notebook>
            <page string="Lines">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="employee_id"/>
                  <field name="input_name"/>
                  <field name="amount"/>
                  <field name="applied"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
        <footer>
          <button string="Import" type="object" name="action_import" class="btn-primary"/>
          <button string="Apply to Payslips" type="object" name="action_apply_to_payslips" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_hr_payroll_input_sheet" model="ir.actions.act_window">
    <field name="name">Payroll Input Sheets</field>
    <field name="res_model">hr.payroll.input.sheet</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_hr_payroll_input_root"
            name="Payroll Inputs"
            parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"/>

  <menuitem id="menu_hr_payroll_input_sheet"
            name="Sheets"
            parent="menu_hr_payroll_input_root"
            action="action_hr_payroll_input_sheet"/>
</odoo>