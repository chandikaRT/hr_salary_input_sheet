<odoo>
    <record id="view_hr_salary_input_tree" model="ir.ui.view">
        <field name="name">hr.salary.input.tree</field>
        <field name="model">hr.salary.input</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="employee_id"/>
                <field name="input_type_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="payslip_id"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_salary_input_form" model="ir.ui.view">
        <field name="name">hr.salary.input.form</field>
        <field name="model">hr.salary.input</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="input_type_id"/>
                        <field name="amount"/>
                        <field name="state"/>
                        <field name="payslip_id"/>
                    </group>
                    <notebook>
                        <page string="Audit Trail">
                            <field name="audit_log">
                                <tree>
                                    <field name="changed_by"/>
                                    <field name="old_value"/>
                                    <field name="new_value"/>
                                    <field name="timestamp"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_input" model="ir.actions.act_window">
        <field name="name">Salary Inputs</field>
        <field name="res_model">hr.salary.input</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_hr_salary_input_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create salary inputs for employees here.
            </p>
        </field>
    </record>

    <menuitem id="menu_hr_salary_input_root" name="Salary Input Manager" parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"/>
    <menuitem id="menu_hr_salary_input_manage" name="Manage Inputs" parent="menu_hr_salary_input_root" action="action_hr_salary_input"/>
</odoo>
